<?xml version="1.0" encoding="UTF-8"?>
<project name="projet3java-master" default="all">
  
  
  <property file="projet3java-master.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8.0_201" value="${jdk.home.1.8.0_201}/bin"/>
  <path id="jdk.classpath.1.8.0_201">
    <fileset dir="${jdk.home.1.8.0_201}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8.0_201}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8.0_201}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8.0_201"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module projet3Java-master -->
  
  <dirname property="module.projet3java-master.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.projet3java-master" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.projet3java-master" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.projet3java-master" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.projet3java-master" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="projet3java-master.output.dir" value="undefined"/>
  <property name="projet3java-master.testoutput.dir" value="undefined"/>
  
  <path id="projet3java-master.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="projet3java-master.module.production.classpath">
    <path refid="${module.jdk.classpath.projet3java-master}"/>
  </path>
  
  <path id="projet3java-master.runtime.production.module.classpath"/>
  
  <path id="projet3java-master.module.classpath">
    <path refid="${module.jdk.classpath.projet3java-master}"/>
  </path>
  
  <path id="projet3java-master.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.projet3java-master">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.projet3java-master">
    <patternset refid="excluded.from.module.projet3java-master"/>
  </patternset>
  
  
  <target name="compile.module.projet3java-master" depends="compile.module.projet3java-master.production,compile.module.projet3java-master.tests" description="Compile module projet3Java-master"/>
  
  <target name="compile.module.projet3java-master.production" depends="register.custom.compilers" description="Compile module projet3Java-master; production classes"/>
  
  <target name="compile.module.projet3java-master.tests" depends="register.custom.compilers,compile.module.projet3java-master.production" description="compile module projet3Java-master; test classes" unless="skip.tests"/>
  
  <target name="clean.module.projet3java-master" description="cleanup module">
    <delete dir="${projet3java-master.output.dir}"/>
    <delete dir="${projet3java-master.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.projet3java-master" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.projet3java-master" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>