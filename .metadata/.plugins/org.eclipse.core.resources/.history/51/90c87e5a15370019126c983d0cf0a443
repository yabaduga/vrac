package testscanner;

import java.util.Random;
import java.util.Scanner;
 
public class Mastermind {
 
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
         
         
        Random r = new Random();
        int a = 0 + r.nextInt(5 - 0);
        Random r1 = new Random();
        int b = 0 + r1.nextInt(5 - 0);
        Random r2 = new Random();
        int c = 0 + r2.nextInt(5 - 0);
        Random r3 = new Random();
        int d = 0 + r3.nextInt(5 - 0);
     
        int z = 0;
        int count = 0;
         
        System.out.println("Mastermind, trouve la combinaison des quatre chiffres entre 0 et 4. O siginife que c'est le bon chiffre à la bonne place et * signifie que c'est le mauvais chiffre.");
        System.out.println("Attention, vous avez droit a 10 essais");
        System.out.println("----------------------------");
         
         
        do {
            System.out.print(" : ");
            int a1 = sc.nextInt();
            System.out.print(" : ");
            int b1 = sc.nextInt();
            System.out.print(" : ");
            int c1 = sc.nextInt();
            System.out.print(" : ");
            int d1 = sc.nextInt();
            System.out.println(a1+" "+b1+" "+c1+ " "+d1);
             
             
            if(a1 != a && b1 != b && c1 != c && d1 != d) {
                System.out.println("* * * *"); 
            }
            else if(a1 != a && b1 != b && c1 != c && d1 == d) {
                System.out.println("* * * O");
            }
            else if(a1 != a && b1 != b && c1 == c && d1 != d) {
                System.out.println("* * O *");
            }
            else if (a1 != a && b1 != b && c1 ==c && d1 == d) {
                System.out.println("* * O O");
            }
            else if(a1 != a && b1 == b && c1 != c && d1 != d) {
                System.out.println("* O * *");
            }
            else if(a1 != a && b1 == b && c1 != c && d1 ==d) {
                System.out.println("* O * O");
            }
            else if(a1 != a && b1 == b && c1 == c && d1 != d) {
                System.out.println("* O O *");
            }
            else if(a1 != a && b1 == b && c1 == c && d1 == d) {
                System.out.println("* O O O");
            }
            else if(a1 == a && b1 != b && c1 != c && d1 != d) {
                System.out.println("O * * *");
            }
            else if(a1 == a && b1 != b && c1 != c && d1 == d) {
                System.out.println("O * * O");
            }
            else if(a1 == a && b1 != b && c1 == c && d1 != d) {
                System.out.println("O * O *");
            }
            else if(a1 == a && b1 != b && c1 ==c && d1 == d) {
                System.out.println("O * O O");
            }
            else if(a1 == a && b1 == b && c1 != c && d1 != d) {
                System.out.println("O O * *");
            }
            else if(a1 == a && b1 == b && c1 != c && d1 == d) {
                System.out.println("O O * O");
            }
            else if(a1 == a && b1 == b && c1 == c && d1 != d) {
                System.out.println("O O O *");
            }else {
                System.out.println("O O O O Tu as reussi");
                z= 1;
            }
            count++;
             
            if(count == 10) {
                System.out.println("He non, vous avez epuisé vos 10 essais, c'est perdu pour vous...");
            }
             
        }while(z != 1 && count < 10);
        System.out.println("En seulement "+count+ " coups");
     
        }
}